<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductoDetalleActivity">

    <include layout="@layout/toolbar_layout"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/caja_producto"
                    android:id="@+id/apdIvImagenProducto"
                    android:layout_width="180dp"
                    android:layout_height="160dp"></ImageView>
            </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/apdBBuscarImagen"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_imagen_buscar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"></Button>


                    <Button
                        android:id="@+id/apdBBuscar"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_imagen_cancelar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"></Button>

                </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            
           <com.google.android.material.textfield.TextInputLayout
               android:hint="@string/nombre_producto"
               android:layout_margin="3dp"
               android:background="@color/blanco"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/apdTietNombreProducto"
              android:inputType="text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
           </com.google.android.material.textfield.TextInputLayout>
            
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:hint="@string/precio_item"
                    android:layout_margin="3dp"
                    android:background="@color/blanco"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/apdTietPrecioProducto"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/apdLLAgregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/apdBAgregar"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle_agregar"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                    </Button>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/apdLLModificar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/apdBModificar"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle_modificar"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                    </Button>


                    <Button
                        android:id="@+id/apdBEliminar"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle_eliminar"
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                    </Button>

                </LinearLayout>



            </RelativeLayout>
            
            
        </LinearLayout>
        
        
        
    </LinearLayout>

</LinearLayout>